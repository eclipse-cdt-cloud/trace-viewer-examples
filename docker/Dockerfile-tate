FROM node:20.18.2-bookworm-slim AS build
ARG RESOURCES

RUN apt-get update && apt-get install -y \
    git \
    python3 \
    make \
    pkg-config \
    libsecret-1-dev \
    g++ \
    libx11-dev \
    libxkbfile-dev

# Build the browser theia-trace-extension application
COPY ${RESOURCES}/package.json /app/tv/
COPY ${RESOURCES}/webpack.config.js /app/tv/
COPY yarn.lock  /app/tv/
WORKDIR /app/tv/
RUN yarn && \
    yarn build && \
    yarn autoclean --init && \
    echo *.ts >> .yarnclean && \
    echo *.ts.map >> .yarnclean && \
    echo *.spec.* >> .yarnclean && \
    yarn --production && \
    yarn cache clean

FROM node:18.19.1-bookworm-slim
ARG RESOURCES

COPY --from=build /app/tv /app/tv

RUN apt-get update && apt-get install -y \
    libx11-6 \
    libxkbfile1 \
    libsecret-1-0 \
    && rm -rf /var/lib/apt/lists/*
ENV NODE_ENV=production

WORKDIR /app/tv
COPY ${RESOURCES}/docker-entrypoint.sh /usr/local/bin
EXPOSE 4000
ENTRYPOINT ["docker-entrypoint.sh"]
